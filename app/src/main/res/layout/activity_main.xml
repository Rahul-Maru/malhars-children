                        </LinearLayout>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Price"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!-- INSERT NEW ROW BELOW -->
        </LinearLayout>
    </RelativeLayout>
</ScrollView>